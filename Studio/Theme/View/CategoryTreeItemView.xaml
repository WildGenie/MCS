<UserControl x:Class="Advent.VmcStudio.Theme.View.CategoryTreeItemView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Style="{StaticResource DropHighlightStyle}" AllowDrop="True" p4:DragDrop.DragMouseButton="Left" p4:DragDrop.AllowEnhancedDrop="True" p4:DragDrop.DropDescription="Copy to {0}" p4:DragDrop.DropDescriptionInsert="{Binding Name}" xmlns:p4="clr-namespace:Advent.Common.UI;assembly=Advent.Common">
            <TextBlock Text="{Binding Name}" />
        </Border>
    </Grid>
</UserControl>